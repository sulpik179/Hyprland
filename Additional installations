#  UPDATE SYS  #
sudo pacman -Syu

#  FISH SHELL  #
sudo pacman -S fish
echo /usr/bin/fish | sudo tee -a /etc/shells
sudo chsh -s /usr/bin/fish
reboot

#  IWGTK  #
sudo pacman -S iwd
sudo systemctl enable --now iwd.service
systemctl status iwd.service
yay -S iwgtk
iwgtk

#  APPS  #
sudo pacman -S neovim nautilus swww obsidian hyprpicker swayimg power-profiles-daemon wlsunset waybar spotify playerctl libnotify inetutils ttf-jetbrains-mono-nerd mako


