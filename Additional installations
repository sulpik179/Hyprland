#  UPDATE SYS  #
sudo pacman -Syu

#  FISH SHELL  #
sudo pacman -S fish
echo /usr/bin/fish | sudo tee -a /etc/shells
sudo chsh -s /usr/bin/fish
reboot

#  IWGTK  #
sudo pacman -S iwd
sudo systemctl enable --now iwd.service
systemctl status iwd.service
yay -S iwgtk
iwgtk

#  FLATPAK  #
sudo pacman -S flatpak
sudo flatpak remote-add --if-not-exists flathub https://flathub.org/repo/flathub.flatpakrepo

#  F APPS  #
sudo flatpak install flathub com.visualstudio.code
alias code='flatpak run com.visualstudio.code'
nvim  ~/.config/fish/config.fish
echo "alias code='flatpak run com.visualstudio.code'" >> ~/.config/fish/config.fish


#  APPS  #
sudo pacman -S neovim nautilus swww obsidian hyprpicker swayimg power-profiles-daemon wlsunset waybar playerctl libnotify inetutils ttf-jetbrains-mono-nerd mako


