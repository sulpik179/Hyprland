#  UPDATE SYS  #
sudo pacman -Syu

#  FISH SHELL  #
sudo pacman -S fish
sudo chsh -s /usr/bin/fish
reboot

#  YAY  #
sudo pacman -Syu
sudo pacman -S --needed base-devel git
git clone https://aur.archlinux.org/yay.git
cd yay
makepkg -si

    #  YAY APPS  #
    yay -S visual-studio-code-bin  #  vs code
    yay -S telegram-desktop-bin  #  telegram

#  IWGTK  #
sudo pacman -S iwd
sudo systemctl enable --now iwd.service
systemctl status iwd.service
yay -S iwgtk
iwgtk

#  FLATPAK  #
sudo pacman -S flatpak
flatpak remote-add --if-not-exists flathub https://flathub.org/repo/flathub.flatpakrepo

    #  FLATPAK APPS  #

#  APPS  #
sudo pacman -S neovim  #  code editor
sudo pacman -S nautilus  #  file manager
sudo pacman -S swww  #  wallpaper manager
sudo pacman -S obsidian  #  notions
sudo pacman -S hyprpicker
sudo pacman -S swayimg 
sudo pacman -S power-profiles-daemon
sudo pacman -S wlsunset
sudo pacman -S waybar
sudo pacman -S spotify
