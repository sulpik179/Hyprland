mkdir -p ~/.config/waybar
cd ~/.config/waybar
touch style.css config.jsonc


#  TOUCHPAD  #
code  ~/.config/scripts/touchpad-toggle.sh
#!/usr/bin/env bash

STATE_FILE="$HOME/.touchpad_state"  # Путь к файлу, где хранится состояние

DEVICE="htix5288:00-093a:0255-touchpad"

# Проверяем, существует ли файл и содержит ли он слово "off" (тачпад выключен)
if [ -f "$STATE_FILE" ] && grep -q "off" "$STATE_FILE"; then
    # Если файл есть и там "off" — значит сейчас тачпад выключен, нужно включить
    echo "Включаем тачпад"
    hyprctl keyword "device[$DEVICE]:enabled" true
    echo "on" > "$STATE_FILE"  # Записываем в файл новое состояние — включён
    notify-send "Тачпад включён"  # Посылаем уведомление в системе
else
    # Если файла нет или там не "off" — считаем, что тачпад включён, надо выключить
    echo "Отключаем тачпад"
    hyprctl keyword "device[$DEVICE]:enabled" false
    echo "off" > "$STATE_FILE"  # Записываем в файл новое состояние — выключен
    notify-send "Тачпад отключён"  # Уведомление системы
fi

chmod +x ~/.config/scripts/touchpad-toggle.sh


#  RESTART_WAYBAR.SH  #
  mkdir ~/.config/scripts
  code  ~/.config/scripts/restart_waybar.sh
    #!/bin/fish
    killall waybar
    sleep 0.1
    waybar &
  chmod +x ~/.config/scripts/restart_waybar.sh

#  SPOTIFY  #
code ~/.config/waybar/spotify-status.sh
chmod +x ~/.config/waybar/spotify-status.sh
#!/bin/bash
# Получить статус воспроизведения (Playing или Paused)
status=$(playerctl -p spotify status 2>/dev/null)

if [ "$status" == "Playing" ]; then
    # Получить имя артиста и название трека
    artist=$(playerctl -p spotify metadata artist)
    title=$(playerctl -p spotify metadata title)
    echo "  $artist - $title"
else
    echo "  Нет воспроизведения"
fi

